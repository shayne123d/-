
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>店铺首页</title>

    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>

    <!-- Bootstrap -->

    <link href="~/bootstrap-3.3.7-dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/Admin/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Store/css/owl.carousel.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Content/Store/css/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/Store/css/style.css" rel="stylesheet" />
    <link href="~/Content/Store/css/responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <div class="header-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="user-menu">
                        <ul>
                            <li><a href="#"><i class="fa fa-user"></i>个人中心</a></li>
                            <li><a href="#"><i class="fa fa-heart"></i> 收藏夹</a></li>
                            <li><a href="cart.html"><i class="fa fa-user"></i> 我的购物车</a></li>
                            <li><a href="checkout.html"><i class="fa fa-user"></i> 确认信息</a></li>
                            <li><a href="#"><i class="fa fa-user"></i>登录注册</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="header-right">
                        <div class="input-group">
                            <input type="text" class="form-control" name="goods" placeholder="Search for...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit">搜索</button>
                            </span>
                        </div>
                    </div>
                    @*<div class="header-right">
                            <ul class="list-unstyled list-inline"></ul>
                        </div>*@
                </div>
            </div>
        </div>
    </div> <!-- End header area -->

    <div class="site-branding-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="logo">
                        <h1><a href="./">馨馨爱宠</a></h1>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="shopping-item">
                        <a href="cart.html">Cart - <span class="cart-amunt">$100</span> <i class="fa fa-shopping-cart"></i> <span class="product-count">5</span></a>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End site branding area -->

    <div class="mainmenu-area">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="index.html">首页</a></li>
                        <li><a href="shop.html">店铺页面</a></li>
                        <li><a href="single-product.html">商品页面</a></li>
                        <li><a href="cart.html">购物车</a></li>
                        <li><a href="checkout.html">核对信息</a></li>

                    </ul>
                </div>
            </div>
        </div>
    </div> <!-- End mainmenu area -->

    <div class="slider-area">
        <!-- Slider -->
        <div class="block-slider block-slider4">
            <ul class="" id="bxslider-home4">
                <li>
                    <img src="~/Content/Store/img/storeslide1.jpg" alt="Slide">
                    <div class="caption-group">
                        <h2 class="caption title">
                            狗粮 <span class="primary">特价<strong>抢购</strong></span>
                        </h2>
                        <h4 class="caption subtitle"></h4>
                        <a class="caption button-radius" href="#"><span class="icon"></span>去看看</a>
                    </div>
                </li>
                <li>
                    <img src="~/Content/Store/img/storeslide2.jpg" alt="Slide">
                    <div class="caption-group">
                        <h2 class="caption title">
                            猫粮 <span class="primary">买一送一<strong>抢购</strong></span>
                        </h2>
                        <h4 class="caption subtitle"></h4>
                        <a class="caption button-radius" href="#"><span class="icon"></span>去看看</a>
                    </div>
                </li>
                <li>
                    <img src="~/Content/Store/img/storeslide3.jpg" alt="Slide">
                    <div class="caption-group">
                        <h2 class="caption title">
                            特价活动 <span class="primary">好礼相送<strong></strong></span>
                        </h2>
                        <h4 class="caption subtitle"></h4>
                        <a class="caption button-radius" href="#"><span class="icon"></span>去看看</a>
                    </div>
                </li>
                <li>
                    <img src="~/Content/Store/img/storeslide4.jpg" alt="Slide" style="height:800px">
                    <div class="caption-group">
                        <h2 class="caption title">
                            活动<span class="primary">有惊喜<strong>别错过</strong></span>
                        </h2>
                        <h4 class="caption subtitle"></h4>
                        <a class="caption button-radius" href="#"><span class="icon"></span>去看看</a>
                    </div>
                </li>
            </ul>
        </div>
        <!-- ./Slider -->
    </div> <!-- End slider area -->

    <div class="promo-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo1">
                        <i class="fa fa-refresh"></i>
                        <p>30天退换</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo2">
                        <i class="fa fa-truck"></i>
                        <p>免运费</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo3">
                        <i class="fa fa-lock"></i>
                        <p>安全支付</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo4">
                        <i class="fa fa-gift"></i>
                        <p>新产品</p>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End promo area -->

    <div class="maincontent-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="latest-product">
                        <h2 class="section-title">促销商品</h2>
                        <div class="product-carousel">
                            @foreach (MyPets.Model.Goods dgoods in ViewData["discountgoods"] as List<MyPets.Model.Goods>)
                            {
                                <div class="single-product">
                                    <div class="product-f-image">
                                        <img src="@Url.Content(dgoods.GoodsImg1)" alt="">
                                        <div class="product-hover">
                                            <a href="#" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> 加入购物车</a>
                                            <a href="single-product.html" class="view-details-link"><i class="fa fa-link"></i> 查看细节</a>
                                        </div>
                                    </div>
                                    <h2><a href="single-product.html">@dgoods.GoodsName</a></h2>
                                    <div class="product-carousel-price">
                                        <ins>@dgoods.DiscountPrice</ins> <del>@dgoods.GoodsPrice</del>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End main content area -->
    <div class="product-widget-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <ul id="myTab" class="nav nav-tabs" role="tablist">
                        <li class="active"><a href="#bulletin" role="tab" data-toggle="tab">全部商品</a></li>
                        <li><a href="#rule" role="tab" data-toggle="tab">狗狗商品</a></li>
                        <li><a href="#forum" role="tab" data-toggle="tab">猫猫商品</a></li>
                        <li><a href="#security" role="tab" data-toggle="tab">奇趣小宠</a></li>
                        <li><a href="#welfare" role="tab" data-toggle="tab">水族市场</a></li>
                    </ul>
                </div><!-- /.col-lg-6 -->
                <div class="col-lg-5">
                    @*<div class="input-group">
                        <input type="text" class="form-control" name="goods" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit"></button>
                        </span>
                    </div>*@
                </div><!-- /.col-lg-6 -->
            </div><!-- /.row -->
            <br /><br />
            <div id="myTabContent" class="tab-content">
                <div class="tab-pane fade in active" id="bulletin">
                    <div id="UpdateAllGoods">
                        @*全部商品显示*@
                        @{
                            Html.RenderAction("PartialAllGoods", "Store");
                        }
                    </div>
                </div>
                <div class="tab-pane fade" id="rule">
                    @*狗狗商品显示*@
                    <div id="PartialDogGoods">
                        @{
                            Html.RenderAction("PartialDogGoods", "Store");
                        }
                    </div>
                </div>
                <div class="tab-pane fade" id="forum">
                    @*猫咪全部商品显示*@
                    <div id="PartialCatGoods">
                        @{
                            Html.RenderAction("PartialCatGoods", "Store");
                        }
                    </div>
                </div>
                <div class="tab-pane fade" id="security">
                    @*小宠商品显示*@
                    <div id="PartialLittleGoods">
                        @{
                            Html.RenderAction("PartialLittleGoods", "Store");
                        }
                    </div>
                </div>
                <div class="tab-pane fade" id="welfare">
                    @*水族商品显示*@
                    <div id="PartialWaterGoods">
                        @{
                            Html.RenderAction("PartialWaterGoods", "Store");
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 底部区域 -->
    <div class="footer-top-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="footer-about-us">
                        <h2>My Pet<span></span></h2>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Perferendis sunt id doloribus vero quam laborum quas alias dolores blanditiis iusto consequatur, modi aliquid eveniet eligendi iure eaque ipsam iste, pariatur omnis sint! Suscipit, debitis, quisquam. Laborum commodi veritatis magni at?</p>
                        <div class="footer-social">
                            <a href="#" target="_blank"><i class="fa fa-facebook"></i></a>
                            <a href="#" target="_blank"><i class="fa fa-twitter"></i></a>
                            <a href="#" target="_blank"><i class="fa fa-youtube"></i></a>
                            <a href="#" target="_blank"><i class="fa fa-linkedin"></i></a>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="footer-menu">
                        <h2 class="footer-wid-title">User Navigation </h2>
                        <ul>
                            <li><a href="#">My account</a></li>
                            <li><a href="#">Order history</a></li>
                            <li><a href="#">Wishlist</a></li>
                            <li><a href="#">Vendor contact</a></li>
                            <li><a href="#">Front page</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="footer-menu">
                        <h2 class="footer-wid-title">Categories</h2>
                        <ul>
                            <li><a href="#">Mobile Phone</a></li>
                            <li><a href="#">Home accesseries</a></li>
                            <li><a href="#">LED TV</a></li>
                            <li><a href="#">Computer</a></li>
                            <li><a href="#">Gadets</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="footer-newsletter">
                        <h2 class="footer-wid-title">Newsletter</h2>
                        <p>Sign up to our newsletter and get exclusive deals you wont find anywhere else straight to your inbox!</p>
                        <div class="newsletter-form">
                            <form action="#">
                                <input type="email" placeholder="Type your email">
                                <input type="submit" value="Subscribe">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End footer top area -->

    <div class="footer-bottom-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="copyright">
                        <p>Copyright &copy; 2015.Company name All rights reserved.<a target="_blank" href="http://www.cssmoban.com/">&#x7F51;&#x9875;&#x6A21;&#x677F;</a></p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="footer-card-icon">
                        <i class="fa fa-cc-discover"></i>
                        <i class="fa fa-cc-mastercard"></i>
                        <i class="fa fa-cc-paypal"></i>
                        <i class="fa fa-cc-visa"></i>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End footer bottom area -->
    <!-- Latest jQuery form server -->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <!-- Bootstrap JS form CDN -->
    <script src="~/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>

    <!-- jQuery sticky menu -->

    <script src="~/Content/Store/js/owl.carousel.min.js"></script>

    <script src="~/Content/Store/js/jquery.sticky.js"></script>

    <!-- jQuery easing -->

    <script src="~/Content/Store/js/jquery.easing.1.3.min.js"></script>

    <!-- Main Script -->

    <script src="~/Content/Store/js/main.js"></script>

    <!-- Slider -->

    <script src="~/Content/Store/js/bxslider.min.js"></script>
    <script src="~/Content/Store/js/script.slider.js"></script>
</body>
</html>
