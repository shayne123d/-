@model MyPets.Model.BaikeActivity

@{
    ViewBag.Title = "编辑广告";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>编辑广告</h2>

@using (Html.BeginForm("EditAd","Admin",FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model=>model.ActivedId)
        <div class="form-group">
            @Html.LabelFor(model => model.ActivedTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ActivedTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ActivedTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ActivedContent, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ActivedContent, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ActivedContent, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-1"></div>
            <div class="col-md-11" style="overflow:hidden;">
                <div class="form-inline">
                  <strong>图片</strong>：  <input type="file" name="activeimg" style="width:200px;display:inline-block;" />
                </div>
                <img src="@Url.Content(Model.ActivedImg)" style="width:850px;" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-1"></div>
            <div class="col-md-11" style="overflow:hidden;">
                <div class="form-inline">
                  <strong>海报</strong>：  <input type="file" name="activedetail" style="width:200px;display:inline-block;" />
                </div>
                <img src="@Url.Content(Model.ActicedDetail)" style="width:850px;" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "AdManagement")
</div>
