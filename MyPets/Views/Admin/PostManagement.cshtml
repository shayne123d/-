@model IEnumerable<MyPets.Model.Post>

@{
    ViewBag.Title = "PostManagement";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>PostManagement</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PostType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsChoose)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsTop)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PostType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostContent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsChoose)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsTop)
        </td>
        <td>
            @Html.ActionLink("Details", "DetailsPost", new { id=item.PostId }) |
            @Html.ActionLink("Delete", "DeletePost", new { id=item.PostId }, new {onclick="return confirm('确定要删除该帖子吗？')" })
        </td>
    </tr>
}

</table>
