@model MyPets.Model.Shop
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>注册商家</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- CSS -->
    <link rel='stylesheet' href='http://fonts.googleapis.com/css?family=PT+Sans:400,700'>
    <link rel='stylesheet' href='http://fonts.googleapis.com/css?family=Oleo+Script:400,700'>
    <link href="~/Content/Admin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Shop/css/style.css" rel="stylesheet" />
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>
    <div class="header">
        <div class="container">
            <div class="row">
                <div class="logo span4 col-md-4">
                    <h1><a href="javascript:;">Shop Register <span class="red">.</span></a></h1>
                </div>
                <div class="links span8 col-md-8">
                    <a class="home" href="" rel="tooltip" data-placement="bottom" data-original-title="首页"></a>
                    <a class="blog" href="" rel="tooltip" data-placement="bottom" data-original-title="待定"></a>
                </div>
            </div>
        </div>
    </div>

    <div class="register-container container">
        <div class="row">
            <div class="iphone span5 col-md-5">
                @*<img src="~/Content/Shop/img/iphone.png" alt="">*@
            </div>
            <div class="register span6 col-md-7">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "账户创建不成功，请跟正错误并重试")
                    <h2>注册 <span class="red"><strong>店铺</strong></span></h2>
                     <div class="form-group">
                        @Html.LabelFor(m => m.ShopName)
                        @Html.TextBoxFor(m => m.ShopName, htmlAttributes: new { @class = "form-control", @placeholder = "输入店铺名..." })
                        @Html.ValidationMessageFor(m => m.ShopName)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ShopImg)
                        @Html.TextBoxFor(m => m.ShopImg, htmlAttributes: new { @type = "file" })
                        @Html.ValidationMessageFor(m => m.ShopImg)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.SellerIdCard)
                        @Html.TextBoxFor(m => m.SellerIdCard, htmlAttributes: new { @class = "form-control", @placeholder = "输入身份证..." })
                        @Html.ValidationMessageFor(m => m.SellerIdCard)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.CustomerService)
                        @Html.TextBoxFor(m => m.CustomerService, htmlAttributes: new { @class = "form-control", @placeholder = "输入客服号码..." })
                        @Html.ValidationMessageFor(m => m.CustomerService)
                    </div>
                    <button type="submit">注册</button>
                }
            </div>
        </div>
    </div>
    <div align="center">
        Copyright &copy; 2017.Company name All rights reserved.<a target="_blank" href="http://sc.chinaz.com/moban/">江西师大</a>
    </div>
    <!-- Javascript -->
    <script src="~/Content/Admin/js/jquery-1.11.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/Shop/js/jquery.backstretch.min.js"></script>
    <script src="~/Content/Shop/js/scripts.js"></script>
    <div style="display:none">
        <script src='http://v7.cnzz.com/stat.php?id=155540&web_id=155540' language='JavaScript' charset='gb2312'></script>
    </div>
</body>
</html>
