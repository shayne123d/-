@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>后台管理</title>
    <meta name="description" content="">
    <meta name="author" content="templatemo">
    <link href='http://fonts.useso.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'>
    <link href="~/Content/Admin/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/templatemo-style.css" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href="~/Content/Admin/css/foundation.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/all.css" rel="stylesheet" />
</head>
<body>
    <!-- Left column -->
    <div class="templatemo-flex-row">
        <div class="templatemo-sidebar">
            <header class="templatemo-site-header">
                <div class="square"></div>
                <h1>管理员</h1>
            </header>
            <div class="profile-photo-container">
                <img src="/Content/Admin/images/profile-photo.jpg" alt="Profile Photo" class="img-responsive">
                <div class="profile-photo-overlay"></div>
            </div>
            <div class="mobile-menu-icon">
                <i class="fa fa-bars"></i>
            </div>
            <nav class="templatemo-left-nav">
                <ul>
                    <li><a href="#" class="active"><i class="fa fa-home fa-fw"></i>办公入口</a></li>
                    <li><a href="#"><i class="fa fa-bar-chart fa-fw"></i>用户管理</a></li>
                    <li><a href="#"><i class="fa fa-database fa-fw"></i>店铺管理</a></li>
                    <li><a href="#"><i class="fa fa-map-marker fa-fw"></i>订单管理</a></li>
                    <li><a href="#"><i class="fa fa-users fa-fw"></i>留言管理</a></li>
                    <li><a href="#"><i class="fa fa-sliders fa-fw"></i>帖子管理</a></li>
                    <li><a href="#"><i class="fa fa-eject fa-fw"></i>退出</a></li>
                </ul>
            </nav>
        </div>
        <!-- Main content -->
        <div class="templatemo-content col-1 light-gray-bg">
            <div class="templatemo-top-nav-container">
                <div class="row">
                    <nav class="templatemo-top-nav col-lg-12 col-md-12">
                        <ul class="text-uppercase">
                            <li><a href="" class="active">管理页面</a></li>
                            <li>@Html.ActionLink("发布百科", "Baike")</li>
                            <li><a href="#">广告管理</a></li>
                            <li><a href="#">待定</a></li>
                            <li><a href="#">待定</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="templatemo-content-container">
                <div class="templatemo-flex-row flex-content-row">
                    <div class="templatemo-content-widget white-bg">
                        @RenderBody()
                    </div>
                 </div>
            </div>
            <footer class="text-right">
                <p>
                    Copyright &copy; 2017 Company Name
                    | More Templates <a href="#" target="_blank" title="模板之家">江西师大</a> - Collect from <a href="http://www.cssmoban.com/" title="网页模板" target="_blank">X3525</a>
                </p>
            </footer>
        </div>
    </div>

    <!-- JS -->
    <script src="~/Content/Admin/js/jquery-1.11.2.min.js"></script>
    <script src="~/Content/Admin/js/jquery-migrate-1.2.1.min.js"></script>
    <script src="~/Content/Admin/js/templatemo-script.js"></script>
    <script src="~/Content/Admin/js/highlight.min.js"></script>

    <script src="~/Content/Admin/js/jquery-stars.js"></script>

    <script src="~/Content/Admin/js/smothscrool.js"></script>

    <script src="~/Content/Admin/js/jquery.main.js"></script>
</body>
</html>
