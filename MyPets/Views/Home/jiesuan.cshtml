
@{
    ViewBag.Title = "jiesuan";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@model IEnumerable<MyPets.Model.ShopCart>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
     <link href="~/Content/Home/js/style.css" rel="stylesheet" />
     <script src="~/Content/Home/css/demo.js"></script>   
</head>
<body>
    <div style="position:absolute;left:330px;margin-top:33px;" >
        <div style="float:left;">您的地址：
           </div>
        <div class="pingjia">
            <input style="width:450px;" id="Text1" type="text" name="man" placeholder="请输入你的详细地址" />
        </div>
    </div>
   <div  style="position:absolute;left:1200px;margin-top:65px;" ><a href="@Url.Action("Index")">继续购物》</a></div>
    <div class="catbox">
        <table id="cartTable">
            <thead>
                <tr>
                    <th>
                        <label>
                            <input class="check-all check" type="checkbox" />&nbsp;&nbsp;全选
                        </label>
                    </th>
                    <th>商品</th>
                    <th>单价</th>
                    <th>数量</th>
                    <th>小计</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>
                            <input class="check-one check" type="checkbox" />
                        </td>
                        <td class="goods">
                            <a><img src="@Url.Content(@b.Goods.GoodsImg1)" /></a>
                            
                           <a><span>@(b.Goods.GoodsName)</span></a> 
                        </td>
                        <td class="price">@(b.Goods.GoodsPrice)</td>
                        <td class="count">
                            <span class="reduce">-</span>
                            <input class="input" type="text" value="1" />
                            <span class="add">+</span>
                        </td>
                        <td class="subtotal">@(b.Goods.GoodsPrice)</td>
                        <td class="operation">
                           <a href=""@Url.Action("Delect", new{id=@b.GoodsId})>
                            <span class="delete">删除</span></a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
        <div class="foot" id="foot">
            <label class="fl select-all"><input type="checkbox" class="check-all check" />&nbsp;&nbsp;全选</label>
            <a class="fl delete" id="deleteAll" href="javascript:;">删除</a>
            <div class="fr closing" onclick="getTotal();">结 算</div>
            <input type="hidden" id="cartTotalPrice" />
            <div class="fr total">合计：￥<span id="priceTotal">0.00</span></div>
            <div class="fr selected" id="selected">已选商品<span id="selectedTotal">0</span>件<span class="arrow up">︽</span><span class="arrow down">︾</span></div>
            <div class="selected-view">
                <div id="selectedViewList" class="clearfix">
                    <div><img src="images/1.jpg"><span>取消选择</span></div>
                </div>
                <span class="arrow">◆<span>◆</span></span>
            </div>
        </div>
    </div>
    
</body>
</html>
